#!/bin/bash
set -e
if pgrep  "VMware Fusion" >/dev/null
then
   echo "Cannot continue since VMware Fusion is running."
   exit 1
fi
export HOSTNAME=`hostname`
export EXTBASE=/Volumes/NVME02
mkdir -p $EXTBASE/$HOSTNAME
rsync -Partv ~/vms $EXTBASE/$HOSTNAME
rsync -Partv ~/Downloads $EXTBASE/$HOSTNAME
rsync -Partv ~/Desktop $EXTBASE/$HOSTNAME
rsync -Partv --exclude Library/ --exclude "Hewlett Packard Enterprise/" --exclude "OneDrive - Hewlett Packard Enterprise" ~/Documents $EXTBASE/$HOSTNAME
